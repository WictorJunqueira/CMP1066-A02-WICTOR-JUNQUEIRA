OH O HOME AI PO (TRAPEZIO MEDIA(TRAPEZIO A, TRAPEZIO B))
    TRAPEZIO R = (A + B)/2;
	BORA CUMPADE R;
BIRL

HORA DO SHOW 

	CE QUER VER ESSA PORRA? ("DIGITA A SUA N1-1 FRANGO, PORRA\n"); 
	TRAPEZIO N1_1;
	QUE QUE CE QUER MONSTRAO? ("%f", &N1_1);

	CE QUER VER ESSA PORRA? ("DIGITA A SUA N1-2 FRANGO, PORRA\n");
	TRAPEZIO N1_2;
	QUE QUE CE QUER MONSTRAO? ("%f", &N1_2);

	CE QUER VER ESSA PORRA? ("DIGITA A SUA N2-1 FRANGO, PORRA\n");
	TRAPEZIO N2_1;
	QUE QUE CE QUER MONSTRAO? ("%f", &N2_1);

	CE QUER VER ESSA PORRA? ("DIGITA A SUA N2-1 FRANGO, PORRA\n");
	TRAPEZIO N2_2;
	QUE QUE CE QUER MONSTRAO? ("%f", &N2_2);
	
	CE QUER VER ESSA PORRA? ("\n");

	
	TRAPEZIO N1 = AJUDA O MALUCO TA DOENTE MEDIA(N1_1, N1_2);
	TRAPEZIO N2 = AJUDA O MALUCO TA DOENTE MEDIA(N2_1, N2_2);


	TRAPEZIO MEDIA_FINAL = ((N1*0.4) + (N2*0.6));


	ELE QUE A GENTE QUER? (MEDIA_FINAL >= 5)
		CE QUER VER ESSA PORRA? ("VOCÃŠ CONSTRUIU FIBRA MANO: %f\n", MEDIA_FINAL);
	NAO VAI DAR NAO
		CE QUER VER ESSA PORRA? ("PORRA ! FEZ AGUA COM MUSCULO: %f\n", MEDIA_FINAL);
	BIRL
    BORA CUMPADE 0;
BIRL
